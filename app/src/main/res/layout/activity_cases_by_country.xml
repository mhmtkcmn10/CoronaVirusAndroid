<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="15dp"
    tools:context=".CasesByCountryActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvcountryname"
        android:textColor="@color/beyaz"
        android:textSize="40dp"
        android:textAlignment="center"
        ></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/tvcountryname"
        android:background="@color/colorPrimaryDark"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bilgi"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tvcountryname"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toplam Vaka"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cases"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout2"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toplam Ölüm"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_deaths"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout3"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toplam Kurtarma"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_totalrecovered"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout6"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durumu Kritik"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_serious_critical"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout7"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktif Vakalar"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_active_cases"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout8"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nüfus Başına Toplam Vaka"
                    android:textColor="@color/beyaz"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    android:textColor="@color/beyaz"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_cases_per_1m_population"
                    android:textColor="@color/beyaz"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ly4"
        android:layout_below="@id/bilgi"
        android:background="@drawable/custom_linear"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yeni Vakalar"
            android:textColor="@color/beyaz"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_newcases"
            android:textColor="@color/beyaz"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ly5"
        android:layout_below="@+id/ly4"
        android:background="@drawable/custom_linear"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yeni Ölümler"
            android:textColor="@color/beyaz"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_newdeaths"
            android:textColor="@color/beyaz"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            ></TextView>

    </LinearLayout>




</RelativeLayout>